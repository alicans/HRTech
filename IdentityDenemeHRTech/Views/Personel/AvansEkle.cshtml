@model YeniAvansViewModel

<div class="p-3 m-5 bg-info bg-gradient text-white justify-content-center d-flex align-items-center">
    <h4>Avans Talebi Oluştur</h4>
</div>

<form asp-action="AvansEkle" method="post">
    <div class="border border-info rounded p-3 m-5" style="background-color:dodgerblue;color:white">    
    <div class="form-group">
        <label asp-for="Tutar" class="control-label"></label>
        <input asp-for="Tutar" class="form-control" />
        <span asp-validation-for="Tutar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tur" class="control-label"></label>
        <select asp-for="Tur" class="form-control">
            <option value="">Lütfen bir avans türü seçin</option>
            <option value="UcretAvansi">Ücret Avansı</option>
            <option value="IsAvansi">İş Avansı</option>
            <option value="YillikUcretliAvans">Yıllık Ücretli Avans</option>
        </select>
        <span asp-validation-for="Tur" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Aciklama" class="control-label"></label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

        <div class="d-flex justify-content-center">
        <input type="submit" value="Avans Talebi Oluştur" class="btn btn-success mt-4 ms-2" />
    </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            var errorMessage = "@ViewBag.ErrorMessage";
            if (errorMessage) {
                alert(errorMessage);
            }
        });
    </script>
}
